  </aop:config>
 -->
	 
	<tx:annotation-driven />
	
	<!-- 
	<tx:annotation-driven transaction-manager="transactionManager" />
	 -->
	
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="mySessionFactory" />
	</bean>
		<bean id="registerController"
			class="com.acuvue.web.controller.RegisterController">
			<property name="userService" ref="service" />
		</bean>

		<bean id="templateDao" class="com.acuvue.dao.UserDAO">
			<property name="sessionFactory" ref="mySessionFactory" />
		</bean>
		<bean id="plainDAO" class="com.acuvue.dao.UserDAO2">
			<property name="sessionFactory" ref="mySessionFactory" />
		</bean>

		<bean id="service" class="com.acuvue.service.UserService">
			<property name="dao" ref="templateDao" />
			<property name="dao2" ref="plainDAO" />
		</bean>

</beans>
